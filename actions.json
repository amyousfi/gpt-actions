{
  "openapi": "3.0.0",
  "info": {
    "title": "Log GPT Chat",
    "version": "1.0.0",
    "description": "Send chat data to n8n Webhook to be logged in Google Sheets"
  },
  "servers": [
    {
      "url": "https://shv.app.n8n.cloud"
    }
  ],
  "paths": {
    "/webhook-test/gpt-logs": {
      "post": {
        "operationId": "logChat",
        "summary": "Log a GPT chat to n8n",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "userMessage": {
                    "type": "string"
                  },
                  "response": {
                    "type": "string"
                  }
                },
                "required": [
                  "userMessage",
                  "response"
                ]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successfully logged"
          }
        }
      }
    }
  }
}
